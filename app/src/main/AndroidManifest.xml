<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesis.project">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-feature android:name="android.hardware.camera.ar" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ArNote"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.launcher.LauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.ar.API_KEY"
            android:value="AIzaSyDtmBTnGA6nCKUQ11UJ7NPTct_HvCVx31g" />
        <meta-data android:name="com.google.ar.core" android:value="required" />

        <activity android:name=".ui.main.MainActivity" android:label="Home"
            android:theme="@style/AppTheme.HomeActionBar"/>
        <activity android:name=".ui.arcamera.ArCameraActivity" android:label="ARCamera"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.login.LoginActivity" android:label="Login" />
        <activity android:name=".ui.register.RegisterActivity" android:label="Register" />
        <activity android:name=".ui.mynotes.MyNotesActivity" android:label="My Notes" />
        <activity android:name=".ui.settings.SettingsActivity" android:label="Settings"
            android:theme="@style/AppTheme.SettingsActionBar"/>
    </application>
</manifest>