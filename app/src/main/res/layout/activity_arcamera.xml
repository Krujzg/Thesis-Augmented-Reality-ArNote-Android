<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="arCameraModel"
            type="com.thesis.project.ui.arcamera.ArCameraActivityViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/arcamera_relativelayou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.arcamera.ArCameraActivity">

    <fragment
        android:id="@+id/sceneform_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.thesis.project.ui.arcamera.CustomArFragment" />

    <ImageView
        android:id="@+id/setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_settings_white_48"
        android:layout_margin="@dimen/arcamera_imageview_margin"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/arcamera_imageview_margin"
        android:background="@drawable/baseline_arrow_back_white_48"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
</layout>