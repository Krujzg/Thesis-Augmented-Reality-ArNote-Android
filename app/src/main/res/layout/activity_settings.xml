<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="settingsUserModel"
            type="com.thesis.project.ui.settings.SettingsActivityViewModel" />
    </data>
<LinearLayout
    android:id="@+id/linearlayout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/red">

    <androidx.cardview.widget.CardView
        android:id="@+id/settings_cardview"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_cardview_height"
        android:layout_margin="@dimen/settings_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_textview_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="@dimen/settings_margin"
                android:text="@string/settings_username_title"
                android:textColor="@color/red"/>
            <View
                android:id="@+id/username_view_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_view_height"
                android:background="@color/lightgray"
                android:layout_margin="@dimen/settings_margin"/>

            <EditText
                android:id="@+id/username_edittext_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_edittext_heigth"
                android:gravity="center"
                android:hint="@string/settings_username_hint"
                android:textColorHint="@color/white"
                android:layout_margin="@dimen/settings_margin"
                android:background="@drawable/rounded_edittext"
                android:textColor="@android:color/white"
                android:text="@={settingsUserModel.displayUserName}"/>

            <TextView
                android:id="@+id/email_textview_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="@dimen/settings_margin"
                android:text="@string/settings_email_title"
                android:textColor="@color/red"
                android:layout_gravity=""/>
            <View
                android:id="@+id/email_view_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_view_height"
                android:background="@color/lightgray"
                android:layout_margin="@dimen/settings_margin"/>
            <EditText
                android:id="@+id/email_edittext_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_edittext_heigth"
                android:gravity="center"
                android:hint="@string/settings_email_hint"
                android:layout_margin="@dimen/settings_margin"
                android:background="@drawable/rounded_edittext"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white"
                android:text="@={settingsUserModel.displayEmail}"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">
                <TextView
                    android:id="@+id/password_textview_settings"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="@dimen/settings_margin"
                    android:text="@string/settings_password_title"
                    android:layout_gravity="center"
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/new_password_textview_settings"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/settings_margin"
                    android:text="@string/settings_new_password_title"
                    android:textColor="@color/red"/>
            </GridLayout>
            <View
                android:id="@+id/password_view_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_view_height"
                android:background="@color/lightgray"
                android:layout_margin="@dimen/settings_margin"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">

                <EditText
                    android:id="@+id/password_edittext_settings"
                    android:layout_columnWeight="1"
                    android:layout_height="@dimen/settings_edittext_heigth"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:hint="@string/settings_password_hint"
                    android:layout_margin="@dimen/settings_margin"
                    android:background="@drawable/rounded_edittext"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:text="@={settingsUserModel.displayPassword}"/>

                <EditText
                    android:id="@+id/new_password_edittext_settings"
                    android:layout_columnWeight="1"
                    android:layout_height="@dimen/settings_edittext_heigth"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:hint="@string/settings_new_password_hint"
                    android:layout_margin="@dimen/settings_margin"
                    android:background="@drawable/rounded_edittext"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:text="@={settingsUserModel.displayPasswordAgain}"/>

            </GridLayout>

            <Button
                android:id="@+id/save_button_settings"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_clear"
                android:text="@string/settings_button_save_text"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:onClick="@{() -> settingsUserModel.updateUserInLocalDb()}"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
</layout>