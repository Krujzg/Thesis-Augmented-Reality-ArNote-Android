<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="settingsUserModel"
            type="com.thesis.project.ui.settings.SettingsActivityViewModel" />
    </data>
<LinearLayout
    android:id="@+id/linearlayout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/red">

    <androidx.cardview.widget.CardView
        android:id="@+id/mynotes"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Username"
                android:textColor="@color/red"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Username"
                android:textColorHint="@color/white"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:textColor="@android:color/white"
                android:text="@={settingsUserModel.displayUserName}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Email"
                android:textColor="@color/red"
                android:layout_gravity=""/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Email"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white"
                android:text="@={settingsUserModel.displayEmail}"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">
                <TextView
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:text="New password"
                    android:layout_gravity="center"
                    android:textColor="@color/red"/>

                <TextView
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="New password again"
                    android:textColor="@color/red"/>
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">

                <EditText
                    android:layout_columnWeight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:hint="Password"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:text="@={settingsUserModel.displayPassword}"/>

                <EditText
                    android:layout_columnWeight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:hint="Password"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:text="@={settingsUserModel.displayPasswordAgain}"/>

            </GridLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_clear"
                android:text="Save"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:onClick="@{() -> settingsUserModel.updateUserInLocalDb()}"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
</layout>