<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="arNoteModel"
            type="com.thesis.project.models.arnote.ArNote" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/recycler_cardview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:elevation="3dp"
            card_view:cardCornerRadius="0dp">
            <GridLayout
                android:id="@+id/recycleritemlyricsmodelgridlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="6"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/title_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Type: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="@{arNoteModel.type}"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/title_shortcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Shortcode: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


                <TextView
                    android:id="@+id/shortcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@{arNoteModel.shortcode}"
                    android:textSize="15sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/title_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Date: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@{arNoteModel.date}"
                    android:textSize="15sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:text="Text: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/lizfi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@{arNoteModel.text}"
                    android:textSize="15sp"
                    android:textColor="@color/white" />


            </GridLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>